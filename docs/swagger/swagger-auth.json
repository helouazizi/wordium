        "responses": {
          "400": {
            "description": "Invalid credentials",
            "content": { "*/*": { "schema": { "$ref": "#/components/schemas/ProblemDetail" } } }
          },
          "200": {
            "description": "User authenticated successfully",
            "content": { "*/*": { "schema": { "$ref": "#/components/schemas/AuthResponse" } } }
          }
        }
