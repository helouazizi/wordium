{
  "openapi": "3.1.0",
  "info": { "title": "OpenAPI definition", "version": "v0" },
  "servers": [{ "url": "http://8b47165a5787:3000", "description": "Generated server url" }],
  "paths": {
    "/auth/signup": {
      "post": {
